<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.taita"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add the Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="Login Account" >
        </activity>

        <!-- Add the Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register New Account" >
        </activity>

        <!-- Add the ListCities Activity -->
        <activity
            android:name=".ListCitiesActivity"
            android:label="List of Cities" >
        </activity>

        <!-- Add the Search Hotel  Activity -->
        <activity
            android:name=".SearchHotelActivity"
            android:label="@string/title_search_hotel_activity" >
        </activity>
        <activity
            android:name=".HotelDetailsActivity"
            android:label="@string/title_activity_hotel_details" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!-- set permissions here -->
    <!-- Allow Internet Connection -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>